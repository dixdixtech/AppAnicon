<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <EditText
        android:id="@+id/inputLivro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/gray_background"
        android:drawableStart="@drawable/lupa_cinza"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/pesquisar"
        android:inputType="text"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLivro"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.tabs.TabLayout
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:tabTextColor="@color/grey"
                app:tabRippleColor="@color/red_secondary"
                app:tabIndicatorColor="@color/red_primary"
                app:tabSelectedTextColor="@color/red_primary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.501"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/inputLivro">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"/>

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vestimentas" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acessórios" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colecionáveis" />
            </com.google.android.material.tabs.TabLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/btnuser"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/circle_secondary"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:srcCompat="@drawable/grey_user" />



    <ImageButton
        android:id="@+id/close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="centerCrop"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"/>


<View
android:layout_width="match_parent"
android:layout_height="3dp"
android:background="@drawable/blue_pink_line"
app:layout_constraintTop_toBottomOf="@+id/btnuser"
tools:layout_editor_absoluteX="-7dp" />



<TextView
android:id="@+id/txtUsuario"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Nome do Usuário"
android:textColor="@color/Black"
android:textSize="18sp"
android:textStyle="bold"
android:layout_marginTop="30dp"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/btnuser"
app:srcCompat="@drawable/login"/>

<EditText
android:id="@+id/edtxtLogin"
android:layout_width="320dp"
android:layout_height="38dp"
android:layout_marginTop="40dp"
android:background="@drawable/gray_background"
android:drawableEnd="@drawable/email"
android:drawablePadding="5dp"
android:ems="10"
android:enabled="false"
android:hint="email_usuario@gmail.com"
android:paddingStart="12dp"
android:paddingTop="8dp"
android:paddingEnd="12dp"
android:paddingBottom="8dp"
android:textColorHint="@color/DarkGray"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/txtUsuario"
tools:ignore="TouchTargetSizeCheck" />

<EditText
android:id="@+id/edtxtSenha"
android:layout_width="320dp"
android:layout_height="38dp"
android:layout_marginTop="20dp"
android:background="@drawable/gray_background"
android:drawableEnd="@drawable/senha"
android:drawablePadding="5dp"
android:ems="10"
android:enabled="false"
android:hint="******"
android:paddingStart="12dp"
android:paddingTop="8dp"
android:paddingEnd="12dp"
android:paddingBottom="8dp"
android:textColorHint="@color/DarkGray"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edtxtLogin"
tools:ignore="TouchTargetSizeCheck" />
<EditText
android:id="@+id/edtxtLocalizacao"
android:layout_width="320dp"
android:layout_height="120dp"
android:layout_marginTop="20dp"
android:background="@drawable/gray_background"
android:drawableEnd="@drawable/ic_baseline_location_on_24"
android:drawablePadding="5dp"
android:ems="10"
android:enabled="false"
android:hint="Insira a localização"
android:paddingStart="12dp"
android:paddingTop="8dp"
android:paddingEnd="12dp"
android:paddingBottom="8dp"
android:textColorHint="@color/DarkGray"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edtxtSenha"
tools:ignore="TouchTargetSizeCheck" />

<Button
android:id="@+id/btnLocalizacao"
android:layout_width="320dp"
android:layout_height="35dp"
android:layout_gravity="center"
android:layout_marginTop="15dp"
android:background="@drawable/blue_rounded"
android:clickable="true"
android:focusable="true"
android:text="Pesquisar localização"
android:textAllCaps="false"
android:textColor="@color/ColorWhite"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/edtxtLocalizacao"
tools:ignore="HardcodedText,TouchTargetSizeCheck,TouchTargetSizeCheck" />

<Button
android:id="@+id/btnEditar"
android:layout_width="120dp"
android:layout_height="38dp"
android:layout_gravity="center"
android:layout_marginTop="40dp"
android:background="@drawable/blue_rounded"
android:clickable="true"
android:focusable="true"
android:text="Editar"
android:textAllCaps="false"
android:textColor="@color/ColorWhite"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/btnLocalizacao"
tools:ignore="HardcodedText,TouchTargetSizeCheck,TouchTargetSizeCheck" />

<Button
android:id="@+id/btnSair"
android:layout_width="120dp"
android:layout_height="38dp"
android:layout_gravity="center"
android:layout_marginTop="30dp"
android:background="@drawable/blue_rounded"
android:clickable="true"
android:focusable="true"
android:text="Sair"
android:textAllCaps="false"
android:textColor="@color/ColorWhite"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toBottomOf="@+id/btnEditar"
tools:ignore="HardcodedText,TouchTargetSizeCheck,TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>